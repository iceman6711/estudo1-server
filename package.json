{
	"name": "base-server",
	"version": "0.0.1",
	"description": "Base.",
	"author": "Spartans - Outsourcing",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "npm run copy:templates && nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "npm run copy:templates && nest start",
		"start:dev": "npm run copy:templates && nest start --watch",
		"start:debug": "npm run copy:templates && nest start --debug --watch",
		"start:prod": "npm run copy:templates && node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"up": "docker-compose up -d nestjs mysql && docker-compose logs -f nestjs",
		"typeorm": "typeorm-ts-node-esm -d src/database/typeorm-datasource.ts",
		"typeorm:migrate": "npm run typeorm migration:generate --",
		"typeorm:create": "npm run typeorm migration:create --",
		"typeorm:run": "npm run typeorm migration:run",
		"copy:templates": "mkdir -p ./dist/templates && cp -R ./src/templates/*.hbs ./dist/templates",
		"clear-imports": "tslint --config tslint-imports.json --fix --project ."
	},
	"dependencies": {
		"@nestjs-modules/mailer": "^1.8.1",
		"@nestjs/axios": "1.0.0",
		"@nestjs/common": "^9.2.1",
		"@nestjs/core": "^9.2.1",
		"@nestjs/jwt": "^9.0.0",
		"@nestjs/passport": "^9.0.0",
		"@nestjs/platform-express": "^9.2.1",
		"@nestjs/platform-socket.io": "^9.2.1",
		"@nestjs/schedule": "^2.1.0",
		"@nestjs/serve-static": "^3.0.0",
		"@nestjs/swagger": "^6.3.0",
		"@nestjs/typeorm": "^9.0.1",
		"@nestjs/websockets": "^9.2.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.0.1",
		"elastic-apm-node": "^3.34.0",
		"express-rate-limit": "^6.4.0",
		"helmet": "^5.1.0",
		"install": "^0.13.0",
		"lodash": "^4.17.21",
		"mqtt": "^4.3.7",
		"mysql": "^2.18.1",
		"nestjs-real-ip": "^2.1.0",
		"nodemailer": "^6.7.5",
		"npm": "^8.11.0",
		"pagarme": "^4.28.0",
		"passport": "^0.6.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.5",
		"sharp": "^0.30.7",
		"socket.io": "^4.5.1",
		"tslint": "^6.1.3",
		"tslint-etc": "^1.13.10",
		"typeorm": "^0.3.6",
		"unique-filename": "^3.0.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^9.1.5",
		"@nestjs/schematics": "^9.0.3",
		"@nestjs/testing": "^9.2.1",
		"@types/cron": "^2.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.5.1",
		"@types/lodash": "^4.14.182",
		"@types/node": "^17.0.36",
		"@types/sharp": "^0.30.4",
		"@types/socket.io": "^3.0.2",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.26.0",
		"@typescript-eslint/parser": "^5.26.0",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^28.1.0",
		"prettier": "^2.6.2",
		"supertest": "^6.2.3",
		"ts-jest": "^28.0.3",
		"ts-loader": "^9.3.0",
		"ts-node": "^10.8.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.8.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
